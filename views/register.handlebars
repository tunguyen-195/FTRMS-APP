<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Parsley.js for validation -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.9.2/parsley.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg">
          <div class="card-header text-center bg-dark text-white">
            <h3><i class="fas fa-user-plus"></i> Register</h3>
          </div>
          <div class="card-body">
            <form id="registerForm" action="/register" method="POST" data-parsley-validate>
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <!-- User Information -->
              <h5>{{t 'register.userInformation'}}</h5>
              <div class="mb-3">
                <label for="username" class="form-label">{{t 'register.username'}}</label>
                <input type="text" class="form-control" id="username" name="username" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">{{t 'register.email'}}</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="phone" class="form-label">{{t 'register.phone'}}</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">{{t 'register.password'}}</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <div class="mb-3">
                <label for="confirmPassword" class="form-label">{{t 'register.confirmPassword'}}</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">{{t 'register.fullName'}}</label>
                <input type="text" class="form-control" id="name" name="name" required data-parsley-trigger="change">
              </div>
              <div class="mb-3">
                <label for="dateOfBirth" class="form-label">{{t 'register.dateOfBirth'}}</label>
                <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required data-parsley-trigger="change">
              </div>
              <div class="mb-3">
                <label for="nationality" class="form-label">{{t 'register.nationality'}}</label>
                <input type="text" class="form-control" id="nationality" name="nationality" required data-parsley-trigger="change">
              </div>
              <div class="mb-3">
                <label for="gender" class="form-label">{{t 'register.gender'}}</label>
                <select name="gender" class="form-control" required>
                  <option value="Male">{{t 'register.genderMale'}}</option>
                  <option value="Female">{{t 'register.genderFemale'}}</option>
                  <option value="Other">{{t 'register.genderOther'}}</option>
                </select>
              </div>

              <!-- Accommodation Information -->
              <h5>{{t 'register.accommodationInformation'}}</h5>
              <div class="mb-3">
                <label for="accommodationName" class="form-label">{{t 'register.accommodationName'}}</label>
                <input type="text" class="form-control" id="accommodationName" name="accommodationName" required>
              </div>
              <div class="mb-3">
                <label for="accommodationType" class="form-label">{{t 'register.accommodationType'}}</label>
                <input type="text" class="form-control" id="accommodationType" name="accommodationType" required>
              </div>
              <div class="mb-3">
                <label for="accommodationAddress" class="form-label">{{t 'register.accommodationAddress'}}</label>
                <input type="text" class="form-control" id="accommodationAddress" name="accommodationAddress" required>
              </div>
              <div class="mb-3">
                <label for="accommodationPhone" class="form-label">{{t 'register.accommodationPhone'}}</label>
                <input type="text" class="form-control" id="accommodationPhone" name="accommodationPhone" required>
              </div>

              <button type="submit" class="btn btn-primary w-100"><i class="fas fa-user-plus"></i> {{t 'register.submitButton'}}</button>
            </form>
          </div>
          <div class="card-footer text-center">
            <small>Already have an account? <a href="/auth/login">Login here</a></small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>